<UserControl x:Class="Online_Grocery_Store.View.Home"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Online_Grocery_Store.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="White">
        <StackPanel VerticalAlignment="Center">
            <Button Command="{Binding scmd}" CommandParameter="Admin" Content="Admin" FontSize="15px" Height="30px" Width="200px" Margin="0,0,0,10"/>
            <Button Command="{Binding scmd}" CommandParameter="Customer" Content="Customer" FontSize="15px" Height="30px" Width="200px" Margin="0,10,0,0"/>
        </StackPanel>
        <ContentControl Content="{Binding Page}"/>
    </Grid>
</UserControl>
